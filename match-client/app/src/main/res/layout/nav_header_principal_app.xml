<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/background_nav_head"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:weightSum="1">

    <ImageView
        android:id="@+id/userPhotoInPrincipalApp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:gravity="center_horizontal"
        android:src="@drawable/foto_perfil_prueba"
        android:adjustViewBounds="false"
        android:focusableInTouchMode="true"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/userAliasInPrincipalApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:text="@string/user_name_in_principal_app"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#fefefe"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_weight="2.48" />

</LinearLayout>
