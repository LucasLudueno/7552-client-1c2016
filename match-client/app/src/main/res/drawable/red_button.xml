<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#91100d" />
            <gradient android:angle="-90"
                android:startColor="#e10e0e"
                android:endColor="#e10e0e"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  > />
            <stroke android:width="1dip" android:color="#af0c0c" />
            <solid android:color="#5e7974"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  > />
            <stroke android:width="1dip" android:color="#5e7974" />
            <gradient android:angle="-90" android:startColor="#af0c0c" android:endColor="#af0c0c" />
        </shape>
    </item>
</selector>


